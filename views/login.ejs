<body>
  <h1 style="text-align: center; ">
    Authentication System       
   
  </h1>
   
  <div> </div>
   <div>
    <form action="login" method="post" id="loginForm">
        <div class="form-group">
            
            <input class="form-control" type="email" name="email" id="" placeholder="Your email...">
        </div>
      
       <div class="form-group">
           
        <input  class="form-control" type="text" name="password" id="" placeholder="Your password...">
       </div>
        <div class="form-group">
            <button class="btn btn-success" type="submit">LOGIN</button>

            <button class="btn btn-primary" id="forgot-pass-button" onclick="resetPassword()">Forgot Password</button>
        </div>
         

         </form>


         <div id="forgot-form" class="hidden">
           <form action="/forgot" method="post">
            <div class="form-group">
                <input type="email"  class="form-control" placeholder="Enter your Email..."  required name="email">
                
            </div>
              <div class="form-group">
               <button class="btn btn-primary"  type="submit">Submit</button>

              </div>          


        </form>

         </div>
        
   </div>

    

         <div class="form-group">
              Dont have an Account!! <a href="/signUp"> <b>
                SignUp Here

              </b> </a>
         </div>
